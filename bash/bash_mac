#!/bin/sh

#bash file
 
## get rid of command not found ##
alias cd..='cd ..'

## a quick way to get out of current directory ##
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'
alias -- -="cd -"

## Colorize the grep command output for ease of use (good for log files)##
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

## shortcut 
alias c='clear'
alias g="git"
alias v="vim"
alias h='history'
alias j='jobs -l'

alias ls="ls -G"
alias ll="ls -alF"
alias la="ls -A"
alias l="ls -CF"

alias clr="clear"

